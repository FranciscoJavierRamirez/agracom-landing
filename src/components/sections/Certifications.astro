---
// Agracom Internacional S.A. - Certifications Section
// Secci√≥n expandida de certificaciones con detalles completos

import type { Locale } from '../../types/global';
import CertificationCard from '../ui/CertificationCard.astro';

export interface Props {
  lang: Locale;
  showDetails?: boolean;
  featured?: string[]; // Featured certification IDs
  class?: string;
}

const {
  lang,
  showDetails = true,
  featured = ['fda-bta', 'brcgs-food', 'halal-cic'],
  class: className = ''
} = Astro.props;

// Load certifications data from JSON files
const certificationsDataModule = await import(`../../data/certifications/${lang}.json`);
const certificationsData = certificationsDataModule.default;

// Extract data from JSON structure
const section = certificationsData.section;
const categories = certificationsData.categories;
const products = certificationsData.products;
const common = certificationsData.common;
const certificates = certificationsData.certificates;

// Filter featured certifications
const featuredCerts = certificates.filter((cert: any) => featured.includes(cert.id));

// Generate email content for main CTA
const generateMainEmailContent = () => {
  const subject = lang === 'es' ? 'Solicitud de Certificados AgraCom' : 'AgraCom Certificates Request';
  const body = lang === 'es' ? 
    'Estimados,\n\nEstoy interesado en obtener certificados de AgraCom para mi proyecto.\n\nPor favor, env√≠enme informaci√≥n sobre:\n- Certificados disponibles\n- Documentaci√≥n t√©cnica\n- Procesos de solicitud\n- Condiciones comerciales\n\nEspero su pronta respuesta.\n\nSaludos cordiales,' : 
    'Dear Team,\n\nI am interested in obtaining AgraCom certificates for my project.\n\nPlease send me information about:\n- Available certificates\n- Technical documentation\n- Request processes\n- Commercial conditions\n\nI look forward to your prompt response.\n\nBest regards,';
  
  return `mailto:info@agracom.cl?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
};
---

<section 
  id={lang === 'es' ? 'certificaciones' : 'certifications'}
  class={`section bg-white ${className}`}
  aria-label={lang === 'es' ? 'Certificaciones y calidad' : 'Certifications and quality'}
>
  <div class="container mx-auto px-4">
    
    <!-- Section Header -->
    <div class="text-center space-y-6 mb-16">
      <div class="space-y-4">
        <h2 class="text-h2 font-bold text-neutral-900">
          {section.title}
        </h2>
        <p class="text-xl text-neutral-700 max-w-3xl mx-auto leading-relaxed">
          {section.subtitle}
        </p>
      </div>

      <!-- Quick Stats -->
      <div class="flex flex-wrap justify-center items-center gap-8 pt-8">
        <div class="text-center">
          <div class="text-3xl font-bold text-primary">{certificates.length}+</div>
          <div class="text-sm text-neutral-600 font-medium">
            {section.stats.certificates}
          </div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-secondary">100%</div>
          <div class="text-sm text-neutral-600 font-medium">
            {section.stats.compliance}
          </div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-accent">20+</div>
          <div class="text-sm text-neutral-600 font-medium">
            {section.stats.experience}
          </div>
        </div>
      </div>
    </div>

    <!-- Featured Certifications -->
    <div class="mb-16">
      <h3 class="text-2xl font-bold text-neutral-900 mb-8 text-center">
        {section.featured_title}
      </h3>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 items-stretch">
        {featuredCerts.map((cert: any) => (
          <CertificationCard
            certificate={cert}
            lang={lang}
            variant="featured"
            products={products}
            common={common}
          />
        ))}
      </div>
    </div>

    <!-- Additional Certifications with Tags -->
    {showDetails && (
      <div class="space-y-8">
        <h3 class="text-2xl font-bold text-neutral-900 text-center">
          {section.additional_title}
        </h3>

        <!-- Certificates Grid with Tags -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 items-stretch">
          {certificates
            .filter((cert: any) => !featured.includes(cert.id))
            .map((cert: any) => (
              <div class="relative h-full">
                <!-- Category Tag -->
                <div class="absolute -top-3 left-4 z-20">
                  <span class={`inline-flex items-center px-3 py-1 rounded-full text-xs font-medium
                    ${cert.category === 'religious' ? 'bg-purple-100 text-purple-800 border border-purple-200' : ''}
                    ${cert.category === 'governmental' ? 'bg-blue-100 text-blue-800 border border-blue-200' : ''}
                    ${cert.category === 'quality' ? 'bg-green-100 text-green-800 border border-green-200' : ''}
                    ${cert.category === 'organic' ? 'bg-emerald-100 text-emerald-800 border border-emerald-200' : ''}
                    shadow-sm`}>
                    {cert.category === 'religious' && '‚ò™Ô∏è'}
                    {cert.category === 'governmental' && 'üõ°Ô∏è'}
                    {cert.category === 'quality' && 'üèÜ'}
                    {cert.category === 'organic' && 'üå±'}
                    <span class="ml-1">{categories[cert.category as keyof typeof categories]}</span>
                  </span>
                </div>
                
                <!-- Certificate Card -->
                <CertificationCard
                  certificate={cert}
                  lang={lang}
                  variant="compact"
                  products={products}
                  common={common}
                  class="mt-3 h-full"
                />
              </div>
            ))
          }
        </div>
      </div>
    )}

    <!-- Unified CTA Section -->
    <div class="mt-16 space-y-8">
      <!-- Main CTA - Need Our Certificates -->
      <div class="relative overflow-hidden rounded-3xl bg-gradient-to-br from-blue-600 via-blue-700 to-teal-600 p-1">
        <!-- Gradient border -->
        <div class="relative rounded-3xl bg-gradient-to-br from-blue-600 via-blue-700 to-teal-600 p-12 text-white">
          <!-- Background pattern -->
          <div class="absolute inset-0 opacity-10">
            <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, white 1px, transparent 0); background-size: 40px 40px;"></div>
          </div>
          
          <!-- Content -->
          <div class="relative z-10 max-w-4xl mx-auto text-center space-y-8">
            <div class="space-y-4">
              <h3 class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-white to-blue-100 bg-clip-text text-transparent">
                {section.cta.main_title}
              </h3>
              <p class="text-xl md:text-2xl text-blue-100 max-w-3xl mx-auto leading-relaxed">
                {section.cta.main_subtitle}
              </p>
            </div>

            <!-- Primary Actions -->
            <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
              <a 
                href={generateMainEmailContent()}
                class="group relative overflow-hidden rounded-2xl bg-white text-blue-700 font-semibold px-8 py-4 shadow-xl hover:shadow-2xl transition-all duration-300 inline-flex items-center text-lg min-w-[200px] justify-center"
                onclick="gtag && gtag('event', 'main_certificate_cta', { event_label: 'general_request', custom_parameter_section: 'certifications' })"
              >
                <div class="absolute inset-0 bg-gradient-to-r from-blue-50 to-teal-50 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                <svg class="w-6 h-6 mr-3 relative z-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <span class="relative z-10">{section.cta.request_btn}</span>
                <svg class="w-5 h-5 ml-3 group-hover:translate-x-1 transition-transform relative z-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
              
              <a 
                href="tel:+56-2-XXXXXXX"
                class="group relative overflow-hidden rounded-2xl bg-white/10 backdrop-blur-sm text-white font-semibold px-8 py-4 border-2 border-white/30 hover:border-white/60 hover:bg-white/20 transition-all duration-300 inline-flex items-center text-lg min-w-[200px] justify-center"
                onclick="gtag && gtag('event', 'phone_contact', { event_label: 'certifications_section', custom_parameter_section: 'certifications' })"
              >
                <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <span>{section.cta.call_btn}</span>
              </a>
            </div>
          </div>
        </div>
      </div>


      <!-- Secondary CTA - Specific Certifications -->
      <div class="relative overflow-hidden rounded-3xl bg-gradient-to-br from-slate-50 via-blue-50 to-teal-50 border-2 border-blue-100 p-10">
        <!-- Decorative elements -->
        <div class="absolute top-0 right-0 w-40 h-40 bg-gradient-to-br from-blue-200/30 to-teal-200/30 rounded-full transform translate-x-16 -translate-y-16"></div>
        <div class="absolute bottom-0 left-0 w-32 h-32 bg-gradient-to-tr from-teal-200/20 to-blue-200/20 rounded-full transform -translate-x-8 translate-y-8"></div>
        
        <!-- Content -->
        <div class="relative z-10 max-w-3xl mx-auto text-center space-y-6">
          <div class="space-y-3">
            <h3 class="text-3xl md:text-4xl font-bold text-slate-900">
              {section.cta.specific_title}
            </h3>
            <p class="text-lg md:text-xl text-slate-600 leading-relaxed">
              {section.cta.specific_subtitle}
            </p>
          </div>

          <!-- Secondary Actions -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center pt-4">
            <a 
              href="#contacto"
              class="group relative overflow-hidden rounded-xl bg-blue-600 hover:bg-blue-700 text-white font-semibold px-8 py-4 shadow-lg hover:shadow-xl transition-all duration-300 inline-flex items-center justify-center"
              onclick={`gtag && gtag('event', 'cta_click', { event_label: 'certifications_contact', custom_parameter_section: 'certifications' })`}
            >
              <div class="absolute inset-0 bg-gradient-to-r from-blue-600 to-blue-700 group-hover:from-blue-700 group-hover:to-blue-800 transition-all duration-300"></div>
              <span class="relative z-10">{section.cta.contact_btn}</span>
              <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform relative z-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
            
            <a 
              href="#certificaciones"
              class="group relative overflow-hidden rounded-xl bg-white border-2 border-blue-200 hover:border-blue-300 text-blue-700 hover:text-blue-800 font-semibold px-8 py-4 shadow-md hover:shadow-lg transition-all duration-300 inline-flex items-center justify-center"
              onclick={`gtag && gtag('event', 'cta_click', { event_label: 'view_certifications', custom_parameter_section: 'certifications' })`}
            >
              <div class="absolute inset-0 bg-gradient-to-r from-blue-50 to-teal-50 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              <span class="relative z-10">{section.cta.view_btn}</span>
              <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform relative z-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Certification Card Hover Effects */
  .group:hover .w-16 {
    transform: scale(1.1);
  }

  /* Enhanced gradient backgrounds for featured certs */
  .bg-gradient-to-br {
    background-image: linear-gradient(to bottom right, var(--tw-gradient-stops));
  }

  /* Pulse animation for verified badges */
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.8;
    }
  }

  .text-success svg {
    animation: pulse 2s infinite;
  }

  /* Step indicator styling */
  .bg-primary {
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .grid.md\\:grid-cols-3 {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    
    .grid.lg\\:grid-cols-2 {
      grid-template-columns: 1fr;
    }
  }

  /* Ensure grid items stretch to fill available height */
  .grid.items-stretch {
    align-items: stretch;
  }

  .grid.items-stretch > * {
    height: 100%;
  }

  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .bg-white,
    .bg-gradient-to-br {
      border: 2px solid #000;
    }
    
    .border-neutral-200 {
      border-color: #000;
    }
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .group:hover .w-16,
    .transition-all,
    .transition-transform,
    .transition-shadow {
      transition: none;
      transform: none;
    }
    
    .text-success svg {
      animation: none;
    }
  }

  /* Focus styles for accessibility */
  .btn:focus {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }

  /* Enhanced CTA Styles */
  .bg-gradient-to-br {
    background-image: linear-gradient(to bottom right, var(--tw-gradient-stops));
  }

  /* Gradient text support fallback */
  @supports not (background-clip: text) {
    .bg-clip-text {
      background-clip: unset;
      color: white;
    }
  }

  /* Animation for decorative elements */
  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .w-40.h-40 {
    animation: float 6s ease-in-out infinite;
  }

  .w-32.h-32 {
    animation: float 6s ease-in-out infinite 3s;
  }

  /* Custom button hover effects */
  .min-w-\[200px\] {
    min-width: 200px;
  }

  /* Enhanced backdrop blur support */
  @supports (backdrop-filter: blur(1px)) {
    .backdrop-blur-sm {
      backdrop-filter: blur(4px);
    }
  }

  /* Mobile responsive improvements */
  @media (max-width: 640px) {
    .text-4xl.md\:text-5xl {
      font-size: 2.5rem;
    }
    
    .text-xl.md\:text-2xl {
      font-size: 1.25rem;
    }
    
    .text-3xl.md\:text-4xl {
      font-size: 2rem;
    }
    
    .text-lg.md\:text-xl {
      font-size: 1.125rem;
    }
  }

  /* Reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    @keyframes float {
      0%, 100% {
        transform: translateY(0px);
      }
    }
    
    .group-hover\:translate-x-1,
    .group-hover\:from-blue-700,
    .group-hover\:to-blue-800 {
      transition: none;
    }
  }
</style>