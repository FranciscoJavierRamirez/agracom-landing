  <div class="container mx-auto px-4">
    
    <!-- Section Header -->
    <div class="text-center space-y-6 mb-16">
      <div class="space-y-4">
        <h2 class="text-h2 font-bold text-neutral-900">
          {lang === 'es' ? 'Presencia Global, Servicio Local' : 'Global Presence, Local Service'}
        </h2>
