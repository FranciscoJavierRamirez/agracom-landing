export interface Props {
  lang: Locale;
  showStats?: boolean;
  class?: string;
}

const {
  lang,
  showStats = true,
  class: className = ''
} = Astro.props;
---

<section 
  id={lang === 'es' ? 'regiones' : 'regions'}
  class={`section bg-gradient-to-br from-neutral-50 to-white ${className}`}
  aria-label={lang === 'es' ? 'Regiones y mercados' : 'Regions and markets'}
