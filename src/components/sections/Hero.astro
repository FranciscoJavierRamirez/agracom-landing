    .section--hero {
      min-height: 70vh;
    }
    
    .hero-container {
      gap: 2rem;
    }
  }

  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .certification-badge {
      border: 2px solid currentColor;
    }
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .animate-fade-in {
      animation: none;
      opacity: 1;
    }
    
    .btn:hover {
      transform: none;
    }
  }
</style>