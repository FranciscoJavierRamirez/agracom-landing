  title?: string;
  subtitle?: string;
  description?: string;
  bgImage?: ImageAsset;
  primaryCTA?: CTAButton;
  secondaryCTA?: CTAButton;
  certificationBadges?: boolean;
  showStats?: boolean;
  region?: Region;
  lang: Locale;
  class?: string;
}

